<% layout('./layouts/boilerplate') %>

<div id="cluster-map" class="mb-4"></div>

<h1 class="mb-3">All Campgrounds</h1>

<a href="/campgrounds/new">
    <button class="btn btn-success mb-3">Add a Campground</button>
</a>

<% for (let campground of campgrounds) { %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
           <% if(campground.images.length) { %>
            <img class="img-fluid" src="<%= campground.images[0].url %> " alt="">
            <% } else { %>
            <img src="https://icon-library.com/images/campground-icon/campground-icon-0.jpg" alt="">
            <% } %>
        </div>
        <div class="col-md-8">
            <h4 class="card-title mt-2">
                <%= campground.title %>
            </h4>
            <h5 class="card-title"><%= campground.popupMarkup %></h5>
            <p class="text-muted"><%= campground.location %> - $<%= campground.price %> </p>
            <p class="card-text"><%= campground.description %> </p>
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View Campsite</a>
        </div>
    </div>
</div>
<% } %>

<script>
   const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
   const campgrounds = {features: <%- JSON.stringify(campgrounds) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>
